# Auto detect text files and perform LF normalization
* text=auto

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# JSON files
*.json text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.mjs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf

# Python files
*.py text eol=lf

# Documentation and text files
*.txt text eol=lf
*.rst text eol=lf

# License and legal files
LICENSE text eol=lf
CONTRIBUTING text eol=lf
README text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
.vscode/ export-ignore
.idea/ export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary

# Treat package-lock.json as binary to prevent merge conflicts
package-lock.json binary
yarn.lock binary
pnpm-lock.yaml binary
EOF < /dev/null